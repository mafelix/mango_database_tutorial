<h1>Admin Page </h1>
<hr>
<%= paginate @users %>
<%= link_to "Create a new user",new_admin_user_path%>    <%= link_to "Movies Page", movies_path%>

<% @users.each do |user| %>
<div>
  <h3>Full name: <%= user.firstname%>, <%= user.lastname %></h3>(<%= link_to "Edit", edit_admin_user_path(user.id)%>, <%= link_to "Delete", admin_user_path(user.id), method: :delete, data: {confirm: "You sure?"} %>)
  <h4>Email: <%= user.email %> | Password: <%=p user.password_digest %> | Admin: <%= user.admin %></h4>
  <hr>
</div><br>
<% end %>
